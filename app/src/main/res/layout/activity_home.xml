<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="GPM"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/premierligne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/title"
        android:gravity="center">


        <ImageButton
            android:id="@+id/monplaging"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_perm_contact_calendar_24" />

        <ImageButton
            android:id="@+id/nouveau"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/baseline_add_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dexiemeligne"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/premierligne"
        android:gravity="center">


        <ImageButton
            android:id="@+id/visualisation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_safety_check_24" />

        <ImageButton
            android:id="@+id/analyse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/baseline_analytics_24" />

    </LinearLayout>

</RelativeLayout>